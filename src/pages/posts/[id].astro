---
import { render, getEntry } from "astro:content"

export const prerender = false

const {id} = Astro.props
if (id === undefined) {
  return Astro.redirect("/404")
}

const post = await getEntry("blog", id)
if (!post) {
  return Astro.redirect("/404")
}

const {Content} = await render(post)
---

<h1>{post.data.title}</h1>
<Content/>
